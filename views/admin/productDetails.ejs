                            <h6 class="mb-4">Product Form</h6>
                            <form action="./updateproduct?product=<%= product._id %>" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="_method" value="PUT">

                                <div class="mb-3">
                                    <label for="productName" class="form-label">Product ID</label>
                                    <% const newID = proID %>
                                    <input type="text" class="form-control" id="productName" value="<%= newID %>" aria-describedby="productNameHelp" disabled >
                                </div>
                        
                                <div class="mb-3">
                                    <label for="productName" class="form-label">Product Name</label>
                                    <input type="text" class="form-control" id="uProductName" value="<%= product.name %>" name="uProductName"aria-describedby="productNameHelp">
                                </div>
                        
                                <!-- <div class="mb-3">
                                    <label for="formFileMultiple" class="form-label">Multiple files input example</label>
                                    <input class="form-control" type="file" id="formFileMultiple" multiple style="width: 50%;">
                                </div> -->

                                <div class="mb-3">
                                    <% for (const filename of product.images) { %>
                                        <img src="/uploads/<%= filename %>" alt="Product Image">
                                        <input type="checkbox" value="<%= filename %>" name="pppimages" checked>
                                      <% } %>                                      
                                  
                                    <br><br>
                                    <label for="formFileMultiple" class="form-label">Multiple files input</label><br>
                                    <input class="form-control" type="file" name="pImages" id="formFileMultiple" multiple style="width: 50%;">
                                    <input type="hidden" name="ppimages" value="<%= product.images %>">
                                    <div id="image-previews"></div>
                                </div>
                                <script>
                                   const fileInput = document.getElementById("formFileMultiple");
                                    const previewContainer = document.getElementById("image-previews");

                                    fileInput.addEventListener("change", (event) => {
                                    const selectedFiles = event.target.files;

                                    previewContainer.innerHTML = ""; // Clear previous previews

                                    for (let i = 0; i < selectedFiles.length; i++) {
                                        const file = selectedFiles[i];
                                        const imagePreview = document.createElement("img");
                                        imagePreview.src = URL.createObjectURL(file);
                                        imagePreview.classList.add("selected-image-preview");
                                        previewContainer.appendChild(imagePreview);
                                    }
                                    });
                                    
                                     
                                </script>


                                <div class="mb-3">
                                    <label for="category" class="form-label">Category</label>
                                    <select name="pCategory" class="form-select" id="category" aria-describedby="categoryHelp" style="width: 50%;" required>
                                        <option value="<%= product2.category._id %>"><%= product2.category.name %></option>
                                        <% for(let res of categories){ %>
                                            <% if(!res.isDeleted) {%>
                                                <option value="<%= res._id %>">
                                                    <%= res.name %>
                                                </option>
                                            <% }%>
                                        <% } %>
                                    </select>                                
                                </div>

                                
                                
                                <div class="mb-3">
