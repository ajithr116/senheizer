                                            <label for="price" class="form-label">Price</label>
                                            <input type="number" class="form-control" id="price" value="<%= product.price %>" name="uProductPrice" aria-describedby="priceHelp" step="0.01" style="width: 50%;">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="quantity" class="form-label">Quantity</label>
                                            <input type="number" class="form-control" id="quantity" value="<%= product.quantity %>" name="uProductQuantity" aria-describedby="quantityHelp" min="1" style="width: 50%;">
                                        </div>
                                    </div>
