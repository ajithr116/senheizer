                                </div>

                                <div class="mb-3">
                                    <label for="category" class="form-label">Color varient</label>
                                    <input type="text" class="form-control" id="category" value="<%= product.tags %>" name="uProductTags" aria-describedby="categoryHelp"  style="width: 50%;">
                                </div>


                                <!-- <div class="mb-3">
                                    <label for="colors" class="form-label">Add colors</label>
                                    <input type="text" name="pColors" id="my-tags-input"  data-role="tagsinput" placeholder="add tags">
                                    <% const tagsString = product.tags;const tagsArray = tagsString.split(','); %>
                                  </div>
                              
                                  <button class="btn btn-primary" onclick="getTags()">Get Tags</button>-->
                              
                                  <script>
                                    $(function() {
                                      $('#my-tags-input').tagsinput(); // Initialize tags input
                                    });
                              
                                    function getTags() {
                                      const tagsArray = $('#my-tags-input').tagsinput('items');
                                      const tagsString = tagsArray.join(',');
                                      $('#hidden-tags-field').val(tagsString);

                                      //alert(tagsArray);
                                      //console.log(tagsArray); // Output: ["Amsterdam", "Washington", "Sydney"]
                                    }
                                  </script> 

                                <div class="row">
