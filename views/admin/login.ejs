<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <!-- <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div> -->
        <!-- Spinner End -->


        <!-- Sign In Start -->
        <div class="container-fluid" >
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;" >
                <div class="col-11 col-sm-8 col-md-6 col-lg-5 col-xl-4" >
                    <h2 style="font-weight:100">SENHEIZER</h2>

                    <form action="./aSubmit" method="POST">
                        <div class="bg-light rounded p-4 p-sm-5 my-1 mx-3" style="border-radius: 20px;border:1px solid black">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <h3>Sign In</h3>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="aEmail" name="aEmail" placeholder="name@example.com" style="border-radius: 20px;border:1px solid black" required>
                                <label for="floatingInput">Email</label>
                                <span id="emails"></span>
                            </div>
                            
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control" name="aPassword" id="aPassword" placeholder="Password" style="border-radius: 20px;border:1px solid black" required>
                                <label for="floatingPassword">Password</label>
                                <span id="pass"></span>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <!-- <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                                </div> -->
                                <!-- <a href="">Forgot Password</a> -->
                            </div>
                            <input type="submit" class="btn btn-dark py-3 w-100 mb-4" value="Sign In">
                            <!-- <p class="text-center mb-0">Don't have an Account? <a href="">Sign Up</a></p> -->
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
        <% if (typeof error !== 'undefined') { %>   
            <%if(error===1){%>
                <!-- <p>error 1</p> -->
                <script>
                    const email = document.getElementById('aEmail');
                    email.style.background="red";
                    email.value = "";
                    // email.placeholder="Email format error ";
                    document.getElementById("emails").innerText = "Wrong email format";

                </script>
            <%}else if(error===2){%>
                <!-- <p>error 2</p> -->
                <script>
                    const email = document.getElementById('aEmail');
                    email.style.background="red";
                    email.value = "";
                    // email.placeholder="Email does not exists";
                    document.getElementById("emails").innerText = "Email not exists";

                </script>
            <%}else if(error===3){%>
                <script>
                    const password = document.getElementById('aPassword');
                    password.style.background="red";
                    password.value = "";
                    // password.placeholder="Password Format error";
                    document.getElementById("pass").innerText = "Wrong password format ";

                </script>
            <%}else if(error===4){%>
                <script>
                // const password = document.getElementById('aPassword');
                // const email = document.getElementById('aEmail');
                password.style.background="red";
                email.style.background="red";
                email.value = "";
                password.value = "";
                // password.placeholder="Authentication failed";  
                document.getElementById("pass").innerText = "Authentication failed";
                document.getElementById("emails").innerText = "Authentication failed";     
                // email.placeholder="Authentcation failed";   
                </script>
            <%}%>
        <% } %>
        <!-- Sign In End -->
    </div>
    

