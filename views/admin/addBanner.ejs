                            <h6 class="mb-4">Banner Form</h6>
                            <form action="./addBanner" method="POST">

                                <div class="mb-3">
                                    <label for="image" class="form-label">Image URL</label>
                                    <input style="width:50%" type="file" name="image" class="form-control" id="image" required autocomplete="off" required>
                                  </div>
                                  
                                  <div class="mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <input style="width:50%" type="text" name="description" class="form-control" id="description" required autocomplete="off" required>
                                  </div>
                                  
                                  <div class="mb-3">
                                    <label for="linkType" class="form-label">Link Type</label>
                                    <select style="width:50%" name="linkType" class="form-control" id="linkType" required>
                                      <option value="">Select...</option>
                                      <option value="product">Product</option>
                                      <option value="category">Category</option>
                                    </select>
                                  </div>
                                  
                                  <div class="mb-3" id="productDiv" style="display: none;">
                                    <label for="product" class="form-label">Product</label>
                                    <select style="width:50%" name="product" class="form-control" id="product" required>
                                        <% product.forEach(product =>{ %>
                                            <option value="<%= product._id %>"><%= product.name%></option>
                                        <%})%>
                                    </select>
                                  </div>
                                  
                                  <div class="mb-3" id="categoryDiv" style="display: none;">
                                    <label for="category" class="form-label">Category</label>
                                    <select style="width:50%" name="category" class="form-control" id="category" required>
                                        <% category.forEach(category=>{ %>
                                            <option value="<%= category.name %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                  </div>
                                  
                                  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                                  <script>
                                    $(document).ready(function() {
                                      $('#linkType').change(function() {
                                        if ($(this).val() === 'product') {
                                          $('#productDiv').show();
                                          $('#categoryDiv').hide();
                                  
                                          // Fetch the list of products from the database
                                          const products = getProducts();
                                          products.forEach(product => {
                                            $('#product').append(`<option value="${product.id}">${product.name}</option>`);
                                          });
                                        } else if ($(this).val() === 'category') {
                                          $('#categoryDiv').show();
                                          $('#productDiv').hide();
                                  
                                          // Fetch the list of categories from the database
                                          const categories = getCategories();
                                          categories.forEach(category => {
                                            $('#category').append(`<option value="${category.id}">${category.name}</option>`);
                                          });
                                        } else {
                                          $('#productDiv').hide();
                                          $('#categoryDiv').hide();
                                        }
                                      });
                                    });
                                  </script>
                                  
                                  
                                  <div class="mb-3">
                                    <label for="startDate" class="form-label">Start Date</label>
                                    <input style="width:50%" type="date" name="startDate" class="form-control" id="startDate" autocomplete="off">
                                  </div>
                                  
                                  <div class="mb-3">
                                    <label for="endDate" class="form-label">End Date</label>
                                    <input style="width:50%" type="date" name="endDate" class="form-control" id="endDate" required autocomplete="off">
                                  </div>
                                  
                                  <script>
                                    const today = new Date();
                                    const dd = String(today.getDate()).padStart(2, '0');
                                    const mm = String(today.getMonth() + 1).padStart(2, '0'); 
                                    const yyyy = today.getFullYear();
                                  
                                    const minDate = yyyy + '-' + mm + '-' + dd;
                                  
                                    document.getElementById('startDate').min = minDate;
                                    document.getElementById('endDate').min = minDate;
                                  </script>
                                  
                                  
