            margin: 50px auto;
        }

        .password-verification-form label {
            display: block;
            margin-bottom: 10px;
        }

        .password-verification-form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            background: #fff;
            border: 1px solid #ced4da;
            border-radius: 5px;
            color: #495057;
        }

        .password-verification-form button {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }
        .alert {
            position: absolute; /* Add this line */
            top: 10px; /* Adjust the top position as needed */
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000; /* Set a higher z-index */
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgb(255, 96, 96);
             width:100%;
        }

