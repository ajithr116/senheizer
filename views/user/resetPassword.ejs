    <div class="container" id="alert">
        <p class=" px-5 py-2 d-flex justify-content-center align-items-center" style="color:white" id="alertText"></p>
    </div>
    <div class="container">
        <div class="password-verification-form">
            <h2>Password Verification</h2><br>
            <form action="/resetpassword" method="POST">
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" placeholder="Ex : John111#" id="password" style="border:1px solid white;" name="password" required>
                </div><br>
                <div class="form-group">
                    <label for="verifyPassword">Verify Password:</label>
                    <input type="password" placeholder="Verify password" id="verifyPassword" name="verifyPassword" required>
                </div>
                <button type="submit" class="btn btn-outline-primary px-5">Submit</button>
            </form>
        </div>
    </div>
    <% if (typeof notMatch !== 'undefined') { %>   
        <% if (notMatch==1) { %>
            <!-- <p style="color: red;">Wrong OTP. Please try again.</p> -->
            <script>
                const alerts2 = document.getElementById('alert');
                const alertText = document.getElementById('alertText');
                alerts2.style.backgroundColor="red";
                alertText.textContent="Password not match the format"; 
                    setTimeout(() => {
                        alerts2.style.visibility="hidden";
                    }, 3000);
            </script>
        <% } else if(notMatch==2){%>
            <script>
                const alerts2 = document.getElementById('alert');
                const alertText = document.getElementById('alertText');
                alerts2.style.backgroundColor="red";
                alertText.textContent="Please verify both password same";
                    setTimeout(() => {
                        alerts2.style.visibility="hidden";
                    }, 3000);
            </script>
        <%}else if(notMatch==3){%>
            <script>
                const alerts2 = document.getElementById('alert');
                const alertText = document.getElementById('alertText');
                alerts2.style.backgroundColor="green";
                alertText.textContent="New password accepted";
                    setTimeout(() => {
                        window.location.href="/login";
                    }, 2000);
            </script>
        <%}%>
    <%}%>

