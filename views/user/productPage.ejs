      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="product-images">
              <div class="main-image">
                <% if (product.images && product.images.length > 0) { %>
                  <img src="/uploads/<%= product.images[0] %>" alt="Product Image 1" class="zoom-in-out" style="border-radius: 10px;">
                <% } else { %>
                  <img src="/images/default-product.jpg" alt="Default Product Image">
                <% } %>
              </div>
              
              <div class="thumbnails">
                <% if (product.images && product.images.length > 0) { %>
                  <% product.images.forEach(filename => { %>
                    <img src="/uploads/<%= filename %>" alt="Product Image" class="thumbnail">
                  <% }) %>
                <% } else { %>
                  <p>No images available for this product.</p>
                <% } %>
              
              

                <!-- <img src="images/img5.jpg" alt="Product Image 2" class="thumbnail">
                <img src="images/about.jpg" alt="Product Image 3" class="thumbnail">
                <img src="images/about.jpg" alt="Product Image 4" class="thumbnail"> -->
                <script>
                    const thumbnails = document.querySelectorAll('.thumbnails img');
                    const mainImages = document.querySelector('.main-image img');

                    thumbnails.forEach(thumbnail => {
                    thumbnail.addEventListener('click', () => {
                        const newImageSrc = thumbnail.src;
                        mainImages.src = newImageSrc;
                    });
                    });
                    // Existing code for thumbnail functionality

                    // Zoom in/out functionality
                    const mainImage = document.querySelector('.main-image img');

                    mainImage.addEventListener('wheel', (event) => {
                    if (event.deltaY < 0) { // Zoom in
                        mainImage.style.transform = `scale(${mainImage.style.transform.split('(')[1].split(')')[0] * 1.1})`;
                    } else { // Zoom out
                        mainImage.style.transform = `scale(${mainImage.style.transform.split('(')[1].split(')')[0] * 0.9})`;
                    }
                    });
                </script>
              </div>
            </div>
          </div>
          <div class="col-md-6 ">
            <h1 class="product-name"><%= product.name %></h1>
            <p style="background-color: rgb(224, 217, 217);padding:0 50px 0 50px"><b><%= product.brand %></b></p>
            <div class="product-details">
              <p class="product-rating">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half-o"></i>
                <span class="rating-count">(150+)</span>
              </p>
              <p class="product-price">$<%= product.price %></p>
