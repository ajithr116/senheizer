                <% if (product.tags) { %>
                  <% const tags = product.tags.split(','); %>
                  <div class="color-variants">
                    <% tags.forEach(function(tag) { %>
                      <div class="swatch" data-color="<%= tag %>" style="background-color: <%= tag %>;"></div>
                    <% }); %>
                  </div>
                <% } else { %>
                  <p>No color variants available.</p>
                <% } %>
                

                <!-- <div class="swatch" data-color="red" style="background-color: #ff0000;"></div>
