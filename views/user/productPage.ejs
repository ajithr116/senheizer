                <div class="swatch" data-color="teal" style="background-color: #008080;"></div> -->
                
              </div>
              <div class="quantity">
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" value="1" min="1">
                <span><i class="fa fa-heart pl-5 " style="font-size: 1.5em;"></i></span>

              </div>
              <script>
                const swatches = document.querySelectorAll('.swatch');

                swatches.forEach(swatch => {
                swatch.addEventListener('click', handleSwatchClick);
                });

                function handleSwatchClick(event) {
                    const selectedSwatch = event.target; // Get the clicked swatch

                    // Remove active class from all swatches
                    swatches.forEach(swatch => swatch.classList.remove('active'));

                    // Add active class to the selected swatch
                    selectedSwatch.classList.add('active');

                    // Get the selected color value from the data-color attribute
                    const selectedColor = selectedSwatch.dataset.color;

                    // Do something with the selected color, e.g., display it, update a product image, etc.
                    console.log('Selected color:', selectedColor);
                    }

              </script>
