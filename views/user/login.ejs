<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Senheizer</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <link rel="stylesheet" href="cssu/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .password-container {
            display: flex;
            align-items: center; /* Vertically center the elements */
            position: relative;
        }
        .password-container i {
            position: absolute;
            right: 10px;
            cursor: pointer;
        }
              /* Your existing styles here */

          body {
            background-color: #080710;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
          }

          .background {
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0;
            top: 0;
          }

          .shape:first-child {
            left: -10%;
            top: -10%;
          }

          .shape:last-child {
            right: -20%;
            bottom: -10%;
          }
          form {
        width: 80%;
        max-width: 500px; /* Adjust this value to make the form wider on larger screens */
        background-color: rgba(255, 255, 255, 0.13);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
        padding: 5%;
    }

    form h3 {
        font-size: 32px;
        font-weight: 500;
        line-height: 12px;
        text-align: center;
        margin-bottom: 20px; /* Adjust margin bottom to move the text up */
    }

    label {
        display: block;
        margin-top: 20px; /* Adjust margin top to move the input boxes up */
        font-size: 16px;
        font-weight: 500;
    }

    input {
        display: block;
        height: 50px;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.07);
        border-radius: 10px;
        padding: 0 10px;
        margin-top: 8px; /* Adjust margin top to move the input boxes up */
        font-size: 14px;
        font-weight: 300;
    }

      /* Add more styles for responsiveness here */

      @media (max-width: 768px) {
        .background {
          display: none;
        }

        form {
          width: 90%;
        }
      }
      #brand-name {
  text-align: center;
  margin-top: 50px;
  color: #fff;
  font-size: 40px;
}

#brand-name span {
  display: inline-block;
  animation: wave 1s infinite;
}

@keyframes wave {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5px);
  }
  100% {
    transform: translateY(0);
  }
}

/* Adjust spacing between letters */
#brand-name span + span {
  margin-left: -5px; /* Adjust letter spacing */
}

#brand-name span:nth-child(2) {
  animation-delay: 0.1s;
}

#brand-name span:nth-child(3) {
  animation-delay: 0.2s;
}

#brand-name span:nth-child(4) {
  animation-delay: 0.3s;
}

#brand-name span:nth-child(5) {
  animation-delay: 0.4s;
}

#brand-name span:nth-child(6) {
  animation-delay: 0.5s;
}

#brand-name span:nth-child(7) {
  animation-delay: 0.6s;
}

#brand-name span:nth-child(8) {
  animation-delay: 0.7s;
}

#brand-name span:nth-child(9) {
  animation-delay: 0.8s;
}

#brand-name span:nth-child(10) {
  animation-delay: 0.9s;
}


    </style>
</head>
  <body>
    <h1 style="text-align: center; margin-top: 50px; color: #fff;" id="brand-name"><span>S</span>
      <span>e</span>
      <span>n</span>
      <span>h</span>
      <span>e</span>
      <span>i</span>
      <span>s</span>
      <span>e</span>
      <span>r</span></h1>

    <div class="background">
      <div class="shape"></div>
      <div class="shape"></div>
    </div>
    <form action="submit" method="POST">
      <h3>Login Here</h3>

      <label for="username">Email</label>
      <input type="text" name="uName" placeholder="Email" id="email" required>
      <span id="block" style="display: none;">Is deleled</span>

      <label for="password">Password</label>
      <div class="password-container">
        <input type="password" placeholder="Password" id="upassword" name="uPassword" required>
        <i class="bi bi-eye-slash" id="togglePassword"></i>
      </div>
    

      <button type="submit" >Log In</button>

      <div style="margin-top: 10%; display: flex; align-items: center; justify-content: space-between;">
        <h5><a href="forgotpassword" style="color: rgb(137, 137, 241);">Forgot password ?</a></h5>
        <h5><a href="/signup"  style="color: rgb(137, 137, 241);">Sign Up now</a></h5>
      </div>
    </form>

    <script>
      const passwordField = document.getElementById("upassword");
      const toggleButton = document.getElementById("togglePassword");

      toggleButton.addEventListener("click", function() {
        if (passwordField.type === "password") {
          passwordField.type = "text";
          toggleButton.classList.replace("bi-eye-slash", "bi-eye");
        } else {
          passwordField.type = "password";
          toggleButton.classList.replace("bi-eye", "bi-eye-slash");
        }
      });
    </script>

<% if (typeof error !== 'undefined') { %>   
  <%if(error===1){%>
      <!-- <p>error 1</p> -->
      <script>
          const email = document.getElementById('email');
          email.style.background="#E30B5C";
          email.placeholder="Email format not match";
      </script>
  <%}else if(error===2){%>
      <!-- <p>error 2</p> -->
      <script>
          email.style.background="#E30B5C";
          email.placeholder="Email does not exists";       
      </script>
  <%}else if(error===3){%>
  <script>
      const password = document.getElementById('upassword');
      password.style.background="#E30B5C";
      password.placeholder="Password not match the format";       
  </script>
  <%}else if(error===4){%>
  <script>
      const password = document.getElementById('upassword');
      const email = document.getElementById('email');
      password.style.background="#E30B5C";
      email.style.background="#E30B5C";
      password.placeholder="Not exists";       
      email.placeholder="Not exists";       
  </script>
  <%}else if(error===5){%>
      <script>
          const email = document.getElementById('email');
          email.style.background="#E30B5C";
          email.placeholder="is Blocked due to -----";  
      </script>
    <%}%>
<% } %>


</body>
  
</html>
