    <div class="container">

 
        <h3>Profile settings</h3><br>
        <form action="/profile?userId=<%= userDetails._id %>" method="POST">
            <div class="form-row">
                <input type="hidden" name="userId" value="<%= userDetails._id %>">

                <div class="col">
                    <label>First name</label>
                    <input type="text" name="updateFirstName" value="<%= userDetails.firstName%>" class="form-control" style="height:50px;border-radius: 10px;border:1px solid black;" placeholder="First name" readonly>
                    <a href="#" class="edit-link">Edit</a>
                </div>
                <div class="col">
                    <label>Last name</label>
                    <input type="text" name="updateLastName" value="<%= userDetails.lastName %>" class="form-control" style="height:50px;border-radius: 10px;border:1px solid black;" placeholder="Last name" readonly>
                    <a href="#" class="edit-link">Edit</a>
                </div>  
            </div>
            
            <br>
            <div class="form-row">
                <div class="col">
                    <label>Email</label>
                    <input type="email" name="updateEmail" value="<%= userDetails.email %>" class="form-control" style="height:50px;border-radius: 10px;border:1px solid black;" placeholder="Email" readonly>
                    <!-- <a href="#" class="edit-link">Edit</a> -->
                </div>
                <div class="col">
                    <label>Phone number</label>
                    <input type="text" name="updatePhoneNo" value="<%= userDetails.phoneNumber %>" class="form-control" style="height:50px;border-radius: 10px;border:1px solid black;" placeholder="Phone number" readonly>
                    <a href="#" class="edit-link">Edit</a>
                </div>
                <br>
            </div>
            <br>
            <br>
            <div class="container">
                <div class="col">
                    <input type="submit" class="btn btn-success" value="Update Address" style="width:500px;">
                </div>
            </div>
            <script>
                document.querySelectorAll('.edit-link').forEach(link => {
                link.addEventListener('click', (event) => {
                event.preventDefault(); 
                const inputField = link.previousElementSibling;
                inputField.readOnly = false;
                })
            });
            </script>
        </form>
        <% if (typeof error !== 'undefined') { %>   
            <% if(error==1){%>
                <script>
                    const displayAlert = document.getElementById('alert');
                    displayAlert.style.display='block';
