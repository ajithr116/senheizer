    <div class="container mt-2 py-3">
        <% if(orders==0){%>
            <h2 class="d-flex justify-content-center mt-4">Orders Empty. <a href="/products">Surf now</a> </h2>
        <%}else {%>
            <h2 class="d-flex justify-content-center mt-4">Orders</h2>
        <%}%>
        <% orders.forEach(order => { %> <!-- Loop over each order -->
            <div class="m-2" style="border:1px solid black;border-radius:10px;">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.items.forEach(item => { %> <!-- Loop over each item in the order -->
                            <tr>
                                <td><%= item.productID.name.substring(0, 50) + (item.productID.name.length > 20 ? '...' : '') %></td>
                                <td><%= item.quantity %></td>
                                <td><%= item.price %></td>
                                <td><img style="width:70px;height:auto;" src="/uploads/<%= item.productID.images[0] %>" alt="Product image"></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <div class="container" style="border-top:2px solid black; background-color: rgb(214, 212, 212);">
                    <div class="row"> <!-- Add this row -->
                        <div class="col-md-5">
                            <h5>Address</h5>
                            <p>Address: <%= order.shippingAddressID.address.substring(0, 50) + (order.shippingAddressID.address.length > 20 ? '...' : '') %></p>
                            <p>Phone : <%= order.shippingAddressID.phone %></p>
                            
                        </div>
                        <div class="col-md-4">
                            <h5>Status</h5>
                            <div class="d-flex">
                                <p style>Status :</p> <p class="badge badge-success"> <%= order.orderStatus %></p>
                            </div>
                                            
                            <a class="btn btn-danger" href="/deleteorder?orderId=<%= order._id %>" onclick="alert('Are you sure you want to delete ?')">Delete Order</a> <!-- Display the status of the order -->
                        </div>
                        <div class="col-md-3">
                            <h5>Grand Total</h5>
                            <p >Total : <b><%= order.totalPrice %></b></p>
  
                        </div>
                    </div> <!-- Close the row -->
                </div>
                
                <!-- Add a button to delete the order -->
            </div>
        <% }) %>

    </div>
    
    
    
    
    

