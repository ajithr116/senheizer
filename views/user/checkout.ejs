              <p>Shipping: $ <b style="background-color: rgb(105, 255, 105);"> FREE SHIPPING</b></p>
              <input type="text" id="couponCode" style='border-radius: 5px; border:none' placeholder=" COUPON CODE">

              <hr style="background-color: black;">
              <p>Total: $ <b id="total"><%= total.toFixed(2) %></b></p>
              <script>
                const total = parseFloat(document.getElementById('total').textContent);
                let totalValue = document.getElementById('total');
                
                  $(document).ready(function() {
                      $('#couponCode').on('keyup', function() {
                          var couponCode = $(this).val();
              
                          $.ajax({
                              url: '/verifyCoupon', 
                              type: 'POST', 
                              data: { couponCode: couponCode },
              
                              success: function(response) {
                                  if(response.discount) {
                                    const couponCode = document.getElementById('couponCode');
                                    // alert("id "+ response.couponId);
                                    alert("Coupon working ");
                                    let newTotal = total - response.discount;
                                    totalValue.textContent = total + " - " + response.discount+" = "+newTotal;
                                    couponCode.style.border ="2px solid green";

                                    // Get all the anchor tags by their class name
                                    const anchorTags = document.querySelectorAll('.btn.btn-warning');

                                    // Loop over the anchor tags
                                    anchorTags.forEach(anchorTag => {
                                      // Get the current href attribute
                                      let currentHref = anchorTag.getAttribute('href');

                                      // Check if the href already has a couponId query parameter
                                      if (currentHref.includes('couponId')) {
                                        // If it does, remove it
                                        currentHref = currentHref.split('&couponId')[0];
                                      }

                                      // Add the new couponId to the href
                                      const newHref = currentHref + '&couponId=' + response.couponId;

                                      // Set the new href attribute
                                      anchorTag.setAttribute('href', newHref);
                                    });

                                  } 
                              },
                              error: function(err) {
                                const couponCode = document.getElementById('couponCode');
                                couponCode.style.border="2px solid red";

                                if(err.responseJSON.message=="expire"){
                                  alert("Error: " + err.responseJSON.message);
                                  const couponCode = document.getElementById('couponCode');
                                  couponCode.style.border="2px solid red";
                                }
                              }
                          });
                      });
                  });
              </script>
              
