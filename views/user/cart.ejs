    const item = btn.parentElement.parentElement.parentElement.dataset.item; // Access item data

    if (btn.dataset.action === 'increase' && value < item.quantity) {
      value++;
    } else if (btn.dataset.action === 'decrease' && value > 1) {
      value--;
    }

    fetch('/updatecart', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        productID: item.productID,
        quantity: value
      })
    })
      .then(response => response.json())
      .then(data => {
