                    <!-- Filter, Sort, and Search Row -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <!-- Filter Dropdown -->
                            <label for="filterSelect" class="form-label">Filter by Category:</label>
                            <select class="form-select" id="filterSelect">
                                <option value="">All</option>
                                <!-- Add your category options dynamically here -->
                            </select>
                        </div>
                        <div class="col-md-4">
                            <!-- Sort Dropdown -->
                            <label for="sortSelect" class="form-label">Sort by:</label>
                            <select class="form-select" id="sortSelect">
                                <option value="id_asc">Ascending</option>
                                <option value="id_desc">Descending</option>
                                <!-- Add more sorting options as needed -->
                            </select>
                        </div>
                        <div class="col-md-4">
                            <!-- Search Input -->
                            <label for="searchInput" class="form-label">Search:</label>
                            <input type="text" class="form-control" id="searchInput" placeholder="Type to search">
                        </div>
                    </div>
    
                    <!-- Table -->
                    <div class="table-responsive" >
                        <table id="yourTableId" class="table">
                          <thead>
                            <tr>
                              <th scope="col">ID</th>
                              <th scope="col">Total items</th>
                              <th scope="col">Total</th>
                              <th scope="col">Status</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% orders.forEach(order => { %>
                              <tr>
                                <td scope="col"><%= order.orderID %></td>
                                <td scope="col"><%= order.items.length %></td>
                                <td scope="col">$<%= order.totalPrice %></td>
                                <% if(order.orderStatus=="pending"){%>
                                    <td scope="col" class="bg-warning" style="color:rgb(78, 109, 136)"><%= order.orderStatus %></td>
                                <%}else if(order.orderStatus=="canceled"){%>
                                    <td scope="col" class="bg-danger" style="color:aliceblue"><%= order.orderStatus %></td>
                                <%}else if(order.orderStatus=="delivered"){%>
                                    <td scope="col" class="bg-success" style="color:aliceblue"><%= order.orderStatus %></td>
                                <%}%>
                                
                              </tr>
                            <% }) %>
                          </tbody>
                        </table>
                    </div>                              
                </div>
